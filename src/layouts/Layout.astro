---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Caveat&family=Lexend&family=Lobster&family=Pacifico&family=Unbounded&display=swap");
  :root {
    --dark: #212121;
    --light: #fff;
    --white: #ccc;
    --rounded: 5px;
  }
  html {
    background-color: var(--dark);
    font-family: "Lexend";
    color: var(--white);
  }
  main {
    /* height: 95vh; */
  }
  h1 {
    padding: 1rem;
    font-size: 1.5rem /* 24px */;
    line-height: 2rem /* 32px */;
    font-family: "Pacifico";
    color: #25d366;
  }
  h3 {
    padding: 0.5rem 0;
    font-size: 1.25rem /* 20px */;
    line-height: 1.75rem /* 28px */;
    font-family: "Lobster";
    color: #f89d1f;
  }
  span {
    color: #dcbd4c;
  }
  section {
    padding: 1rem;
    margin: 0 1rem 1rem;
  }
</style>
